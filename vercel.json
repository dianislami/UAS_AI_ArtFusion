{
  "version": 2,
  "buildCommand": "cd ArtFusion && npm ci && npm run build",
  "outputDirectory": "ArtFusion/dist",
  "builds": [
    {
      "src": "ArtFusion_Backend/api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "memory": 3008,
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/ArtFusion_Backend/api/$1.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}